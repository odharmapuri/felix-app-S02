FROM tomcat:8-jre11
LABEL project="felix"
LABEL author="omkar"

RUN rm -rf /usr/local/tomcat/webapps/*
RUN rm -rf /usr/local/tomcat/webapps.dist

COPY felix.war /usr/local/tomcat/webapps/ROOT.war

EXPOSE 8080

CMD ["catalina.sh", "run"]

WORKDIR /usr/local/tomcat/

VOLUME [ "/usr/local/tomcat/webapps/" ]

